<div class="panel panel-default">
  <div class="panel-heading">
    Create your beautiful place
  </div>
  <div class="panel-body">
    <div class="container">

        <%= form_for @room do |f| %>

        <div class="row">

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Home Type</label>
              <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"]],
              id: "home_type", prompt: "Select...", class: "font-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
              <div class="form-group">
                <label>Room Type</label>
                <%= f.select :home_type, [["Entier", "Entier"], ["Private", "Private"], ["Shared", "Shared"]],
                id: "room_type", prompt: "Select...", class: "font-control" %>
              </div>
            </div>

            <div class="col-md-4 select">
                <div class="form-group">
                  <label>Accommodate</label>
                  <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                  id: "accommodate", prompt: "Select", class: "font-control" %>
                </div>
              </div>

                <div class="col-md-4 select">
                  <div class="form-group">
                    <label>Bedroom</label>
                    <%= f.select :bedroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                    id: "bedroom", prompt: "Select...", class: "font-control" %>
                  </div>
                </div>

                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Bathroom</label>
                      <%= f.select :bathroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                      id: "bathroom", prompt: "Select...", class: "font-control" %>
                    </div>
                  </div>

        </div>

        <div><%= f.submit "Create My Room", class: "btn btn-normal" %></div>

      <% end %>

    </div>
  </div>
</div>
